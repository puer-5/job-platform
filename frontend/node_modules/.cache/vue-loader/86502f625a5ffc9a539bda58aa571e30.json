   <el-button\r\n              size=\"small\"\r\n              type=\"success\"\r\n              :disabled=\"row.isDefault\"\r\n              @click=\"setDefault(row.id)\"\r\n          >\r\n            {{ row.isDefault ? \"默认简历\" : \"设为默认\" }}\r\n          </el-button>\r\n        </template>\r\n      </el-table-column>\r\n    </el-table>\r\n\r\n    <!-- 简历编辑弹窗 -->\r\n    <el-dialog :title=\"dialogForm.id ? '编辑简历' : '新增简历'\" v-model=\"dialogVisible\">\r\n      <el-form :model=\"dialogForm\" label-width=\"80px\">\r\n        <el-form-item label=\"标题\">\r\n          <el-input v-model=\"dialogForm.title\" />\r\n        </el-form-item>\r\n        <el-form-item label=\"简介\">\r\n          <el-input type=\"textarea\" v-model=\"dialogForm.summary\" />\r\n        </el-form-item>\r\n      </el-form>\r\n      <template #footer>\r\n        <el-button @click=\"dialogVisible = false\">取消</el-button>\r\n        <el-button type=\"primary\" @click=\"saveResume\">保存</el-button>\r\n      </template>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'SeekerResumeManage',\r\n  data() {\r\n    return {\r\n      resumes: [],\r\n      dialogVisible: false,\r\n      dialogForm: {\r\n        id: null,\r\n        title: '',\r\n        summary: '',\r\n        isDefault: false\r\n      },\r\n      jobSeekerId: null\r\n    };\r\n  },\r\n  mounted() {\r\n    this.jobSeekerId = JSON.parse(atob(localStorage.getItem('token').split('.')[1])).userId;\r\n    this.fetchResumes();\r\n  },\r\n  methods: {\r\n    async fetchResumes() {\r\n      const res = await axios.get(`/resumes/jobseeker/${this.jobSeekerId}`);\r\n      this.resumes = res.data;\r\n    },\r\n    openDialog(resume = null) {\r\n      this.dialogForm = resume\r\n          ? { ...resume }\r\n          : { id: null, title: '', summary: '', isDefault: false };\r\n      this.dialogVisible = true;\r\n    },\r\n    async saveResume() {\r\n      if (this.dialogForm.id) {\r\n        await axios.put(`/resumes/${this.dialogForm.id}`, this.dialogForm);\r\n      } else {\r\n        const newResume = {\r\n          ...this.dialogForm,\r\n          jobSeekerId: this.jobSeekerId\r\n        };\r\n        await axios.post('/resumes', newResume);\r\n      }\r\n      this.dialogVisible = false;\r\n      this.fetchResumes();\r\n    },\r\n    async deleteResume(id) {\r\n      await axios.delete(`/resumes/${id}`);\r\n      this.fetchResumes();\r\n    },\r\n    async setDefault(id) {\r\n      await axios.post(`/resumes/${id}/set-default`);\r\n      this.fetchResumes();\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.resume-container {\r\n  padding: 20px;\r\n}\r\n</style>\r\n"]}]}